{
  "name": "@conciergerie.dev/select-a11y",
  "version": "3.0.0",
  "description": "Combobox, single and multiple select component with a focus on accessibility. It includes a search bar with local and remote search.",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/types.d.ts",
  "css": "dist/select-a11y.css",
  "test": "public/assets/scripts/index.js",
  "test-css": "public/assets/css/style.css",
  "sideEffects": "public/assets/scripts/*.js",
  "targets": {
    "main": {
      "source": "src/select-a11y.js",
      "context": "browser"
    },
    "css": {
      "source": "src/select-a11y.scss"
    },
    "test": {
      "source": "public/assets/scripts/main.js"
    },
    "test-css": {
      "source": "public/assets/scss/style.scss"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://git.sr.ht/~nicolaskempf57/select-a11y"
  },
  "scripts": {
    "build": "rm -rf .parcel-cache && parcel build && npm run build-types",
    "build-types": "npx -p typescript tsc dist/*.js --declaration --allowJs --emitDeclarationOnly --outDir dist",
    "dev": "rm -rf .parcel-cache && parcel watch",
    "prepublishOnly": "npm run build",
    "test": "tape tests/index.cjs"
  },
  "author": "Nicolas KEMPF - conciergerie.dev",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.4.0",
    "parcel": "^2.4.0",
    "puppeteer": "^13.5.1",
    "tape": "^5.5.3",
    "typescript": "^4.8.4"
  },
  "bugs": {
    "url": "https://todo.sr.ht/~nicolaskempf57/select-a11y",
    "email": "~nicolaskempf57/select-a11y-discuss@lists.sr.ht"
  },
  "homepage": "https://git.sr.ht/~nicolaskempf57/select-a11y#readme",
  "directories": {
    "test": "tests"
  }
}
