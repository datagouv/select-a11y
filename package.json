{
  "name": "@conciergerie.dev/select-a11y",
  "version": "3.4.0",
  "description": "Combobox, single and multiple select component with a focus on accessibility. It includes a search bar with local and remote search.",
  "type": "module",
  "types": "./types/select-a11y.d.ts",
  "main": "./dist/select-a11y.umd.cjs",
  "module": "./dist/select-a11y.js",
  "css": "dist/style.css",
  "exports": {
    ".": {
      "import": "./dist/select-a11y.js",
      "require": "./dist/select-a11y.umd.cjs"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://git.sr.ht/~nicolaskempf57/select-a11y"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "vite build && npm run build-types",
    "build-types": "npx -p typescript tsc --declaration --allowJs --emitDeclarationOnly --outDir types",
    "prepublishOnly": "npm run test:build && npm run build",
    "test:build": "vite build -c vite.preview.js && vitest run",
    "test:watch": "vite build -c vite.preview.js && vitest",
    "publish-version": "npm publish --access public"
  },
  "author": "Nicolas KEMPF - conciergerie.dev",
  "license": "MIT",
  "devDependencies": {
    "puppeteer": "^21.3.8",
    "sass": "^1.69.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "bugs": {
    "url": "https://todo.sr.ht/~nicolaskempf57/select-a11y",
    "email": "~nicolaskempf57/select-a11y-discuss@lists.sr.ht"
  },
  "homepage": "https://git.sr.ht/~nicolaskempf57/select-a11y#readme",
  "directories": {
    "test": "tests"
  }
}
